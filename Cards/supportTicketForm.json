{
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "type": "AdaptiveCard",
    "version": "1.0",
    "body": [
        {
            "type": "ColumnSet",
            "columns": [
                {
                    "type": "Column",
                    "width": 3,
                  "items": [
                    {
                      "type": "TextBlock",
                      "text": "Looks like we didn't find a good answer. Please fill in the form below to create a ticket.",
                      "isSubtle": true,
                      "wrap": true
                    },
                    {
                      "type": "TextBlock",
                      "text": "Your question?",
                      "isSubtle": true,
                      "wrap": true
                    },
                    {
                      "type": "Input.Text",
                      "id": "question",
                      "placeholder": "Enter your question",
                      "value": "<%question%>"
                    },
                    {
                      "type": "TextBlock",
                      "text": "Your comments",
                      "wrap": true
                    },
                    {
                      "type": "Input.Text",
                      "id": "comments",
                      "placeholder": "Enter your comments",
                      "isMultiline": true,
                      "value": "<%comments%>"
                    },
                    {
                      "type": "TextBlock",
                      "text": "Priority",
                      "wrap": true
                    },
                    {
                      "type": "Input.ChoiceSet",
                      "id": "priority",
                      "style": "compact",
                      "isMultiSelect": false,
                      "value": "1",
                      "choices": [
                        {
                          "title": "High",
                          "value": "3"
                        },
                        {
                          "title": "Moderate",
                          "value": "2"
                        },
                        {
                          "title": "Low",
                          "value": "1"
                        }
                      ]
                    }
                  ]
                }
            ]
        }
    ],
    "actions": [
        {
            "type": "Action.Submit",
            "title": "Submit",
            "data": {
                "operation": "Submit"
            }
        }
    ]
}