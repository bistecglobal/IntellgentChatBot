{
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "type": "AdaptiveCard",
    "version": "1.0",
    "body": [
        {
            "type": "ColumnSet",
            "columns": [
                {
                    "type": "Column",
                    "width": 2,
                    "items": [
                        {
                            "type": "TextBlock",
                            "text": "Welcome user!",
                            "weight": "bolder",
                            "size": "medium"
                        },
                        {
                            "type": "TextBlock",
                            "text": "Please select what you want to do?",
                            "isSubtle": true,
                            "wrap": true
                        },
                        {
                            "type": "Input.Text",
                            "id": "username",
                            "placeholder": "Enter your name"
                        }
                    ]
                }
            ]
        }
    ],
    "actions": [
        {
            "type": "Action.Submit",
            "title": "Ask a question",
            "data":  {
              "operation": "Question"
            }
        },
        {
            "type": "Action.Submit",
            "title": "Create a support ticket",
            "value": "Title",
            "data": {
              "operation": "Ticket"
            }
        }
    ]
}